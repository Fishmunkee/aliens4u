
<div class="container-show">
  <h2><%= @alien.name %></h2>
  <h3><%= @alien.species %></h3>
  <h3> <%= @alien.planet %></h3>
  <% if @alien.photo.attached? %>
    <%= cl_image_tag @alien.photo.key, height: 300, width: 300, crop: :fit  %>
    <% else %>
    <%= image_tag "alien.png", alt: "Placeholder image", height: 300, width: 300, crop: :fit  %>
    <% end %>

    <p>Rating: <% @alien.rating.to_i.times do  %>
      *
    <% end %>
    </p>
  <br>
  <%= link_to_if current_user.id == @alien.user_id, "Remove Alien",
                  alien_path(@alien),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>

                  <p class="glyphicon glyphicon-star"></p>

</div>

<%= link_to_if current_user.id == @alien.user_id, "Edit", edit_alien_path(@alien) %>

<hr>

<%=  link_to "Back to Aliens", aliens_path %>
<p><%= link_to "Book", new_alien_booking_path(@alien, @booking) %></p>
