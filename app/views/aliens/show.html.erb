
<div class="container-show">
  <div class="row justify-content-center">
    <div class= "col-6">
      <div class="card-show">
        <ul class="list-inline">

        <li><h2><%= @alien.name %></h2></li>
        <li><h3><%= @alien.species %></h3></li>
        <li><h3> <%= @alien.planet %></h3></li>

          <li><% if @alien.photo.attached? %>
            <%= cl_image_tag @alien.photo.key, height: 300, width: 300, crop: :fill %>
            <% else %>
            <%= image_tag "alien.png", alt: "Placeholder image", height: 300, width: 300, crop: :fill  %>
            <% end %></li>
        </ul>

        <ul class="list-crud ">

        <%= link_to_if current_user.id == @alien.user_id, "Remove Alien",
                  alien_path(@alien),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>


        <%= link_to_if current_user.id == @alien.user_id, "Edit", edit_alien_path(@alien) %>

        <%= link_to "Book", new_alien_booking_path(@alien) %>
        </ul>
      </div>
      <div class ="d-flex justify-content-center">
        <%=  link_to "Back to Aliens", aliens_path %>
      </div>
    </div>
  </div>
</div>





