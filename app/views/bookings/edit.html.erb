<div class="row mt-5">
  <div class="col-6 offset-3">
      <div class="mt-5 mb-5 form">
        <%= simple_form_for(@booking) do |f| %>
          <%= f.input :appointment_start_date, as: :date, html5: true %>
          <%= f.input :appointment_end_date, as: :date, html5: true %>
          <%= f.submit %>
        <% end %>
      </div>
      <%= link_to "Back", booking_path(@booking.id), class:"form_link" %>
   </div>
</div>      
